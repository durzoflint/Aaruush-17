<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="innominatebit.aaruush17">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".Firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".Firebase.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Authentication.MainLogin"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StockMarket.StockMarket"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StockMarket.LeaderboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Authentication.StockLogin"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBarWhite" />
        <activity
            android:name=".Dashboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBarWhite" />
        <activity
            android:name=".Extras.PushNotifications"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBarWhite" />
        <activity
            android:name=".NavigationDrawerElements.Sponsors"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBarWhite" />
        <activity
            android:name=".NavigationDrawerElements.Highlights"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBarWhite" />
        <activity
            android:name=".NavigationDrawerElements.AboutUs"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBarWhite" />
        <activity
            android:name=".NavigationDrawerElements.Patrons"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBarWhite" />
        <activity
            android:name=".NavigationDrawerElements.Team"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBarWhite" />
        <activity
            android:name=".NavigationDrawerElements.MeetTheDevs"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBarWhite" />
        <activity
            android:name=".NavigationDrawerElements.MeetTheDevTransition"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Detail"/>
    </application>

</manifest>