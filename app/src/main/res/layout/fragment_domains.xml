<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="innominatebit.aaruush17.Fragments.Timeline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@color/secondary"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="130sp"
                    android:layout_height="30sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/roundbutton">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:drawableStart="@drawable/calendericon"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingLeft="10sp"
                        android:paddingStart="10sp"
                        android:text="Day/Time"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="left">

                <LinearLayout
                    android:layout_width="130sp"
                    android:layout_height="30sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginStart="5sp"
                    android:background="@drawable/roundbutton">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:drawableStart="@drawable/databaseicon"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingLeft="5sp"
                        android:paddingStart="5sp"
                        android:text="Alphabetical"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:text="EVENTS CONDUCTED: 34/349"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEFF1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="FAVOURITES"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/buttonshadow"
                    android:drawableLeft="@drawable/domeicon"
                    android:drawablePadding="20sp"
                    android:drawableRight="@drawable/staricon"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:text="Buildify"
                    android:textAlignment="textStart" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/buttonshadow"
                    android:drawableLeft="@drawable/briefcaseicon"
                    android:drawablePadding="20sp"
                    android:drawableRight="@drawable/staricon"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:text="Ad-Bees"
                    android:textAlignment="textStart" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/buttonshadow"
                    android:drawableLeft="@drawable/simicon"
                    android:drawablePadding="20sp"
                    android:drawableRight="@drawable/staricon"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:text="Digito Mania"
                    android:textAlignment="textStart" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/buttonshadow"
                    android:drawableLeft="@drawable/codeicon"
                    android:drawablePadding="20sp"
                    android:drawableRight="@drawable/staricon"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:text="Source Code 2.0"
                    android:textAlignment="textStart" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="ALPHABETICAL"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/buttonshadow"
                    android:drawableLeft="@drawable/cameraicon"
                    android:drawablePadding="20sp"
                    android:drawableRight="@drawable/bstaricon"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:text="Click It"
                    android:textAlignment="textStart" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/buttonshadow"
                    android:drawableLeft="@drawable/domeicon"
                    android:drawablePadding="20sp"
                    android:drawableRight="@drawable/bstaricon"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:text="Buildify"
                    android:textAlignment="textStart" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/buttonshadow"
                    android:drawableLeft="@drawable/briefcaseicon"
                    android:drawablePadding="20sp"
                    android:drawableRight="@drawable/bstaricon"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:text="Ad-Bees"
                    android:textAlignment="textStart" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/buttonshadow"
                    android:drawableLeft="@drawable/simicon"
                    android:drawablePadding="20sp"
                    android:drawableRight="@drawable/bstaricon"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:text="Digito Mania"
                    android:textAlignment="textStart" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/buttonshadow"
                    android:drawableLeft="@drawable/codeicon"
                    android:drawablePadding="20sp"
                    android:drawableRight="@drawable/bstaricon"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:text="Source Code 2.0"
                    android:textAlignment="textStart" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>